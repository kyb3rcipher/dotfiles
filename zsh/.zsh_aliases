### shortcuts ###
alias e='$EDITOR'
alias se='sudo $EDITOR'
alias l='ls'
alias ll='ls -l'
alias lla='ls -la'
alias reload='source ~/.zshrc'
alias incognito='unset HISTFILE'
alias http.server='python -m http.server'
alias notes='$EDITOR ~/Documents/notes.txt'

# permissos
alias chx='chmod +x'
alias ch666='chmod 666'
alias ch777='chmod 777'
alias chmine='sudo chown -R $USER:$USER'

# move
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# config files
alias .zshrc='$EDITOR ~/.zshrc'
alias .zsh_aliases='$EDITOR ~/.zsh_aliases'
alias .zsh_plugins='$EDITOR ~/.zsh_plugins'
alias .zsh_local='$EDITOR ~/.zsh_local'
alias .nvim_config='cd ~/.config/nvim'
alias .kitty_config='cd ~/.config/kitty'
alias .kitty_conf='$EDITOR ~/.config/kitty/kitty.conf'
alias .gitconfig='$EDITOR ~/.gitconfig'
alias .gitconfig_local='$EDITOR ~/.gitconfig_local'
alias .lazygit_config='$EDITOR ~/.config/lazygit/config.yml'
alias .dotfiles='cd ~/.dotfiles'

# git
alias g='git'
alias lg='lazygit'
alias gi='git init'
alias ga='git add'
alias gs='git status'
alias gr='git restore'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit --amend'
alias grm='git remote'
alias gra='git remote add'
alias gpl='git pull'
alias gp='git push'
alias gpf='git push -f'
alias gd='git diff'
alias gl='git log'
alias gcl='git clone'
alias gck='git checkout'
alias gdlc='git reset --hard HEAD^' # git delete lasted commit

# kitty terminal
if [ $TERM = "xterm-kitty" ]; then
  alias ssh='kitty +kitten ssh'
  alias icat='kitty +kitten icat --align=left'
  alias themes='kitty +kitten themes'
fi

### default commands ###
alias ls='ls --color=auto --group-directories-first'
alias ip='ip --color=auto'
alias sudo='sudo '
alias ln='ln -s'
alias cp='cp -r'
alias rmdir='rm -rf'
alias mkdir='mkdir -p'
alias chmod='chmod --verbose'
alias diff='diff --color=auto -r'

# packages manager
alias apt='sudo apt'
alias dpkg='sudo dpkg'
alias pacman='sudo pacman --color=auto'

### better commands ###
command -v lsd > /dev/null && alias ls='lsd --group-directories-first' && alias tree='lsd --group-directories-first --tree'
command -v bat > /dev/null && alias cat='bat --pager=never' && alias catp='bat --paging=never --style=plain'
command -v delta > /dev/null && alias diff='delta' 
